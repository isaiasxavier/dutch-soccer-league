{% extends 'base.html.twig' %}

{% block title %}Times Seguidos{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="shadow-md max-w-2xl bg-white p-6 rounded-lg shadow-md">
            <h1 class="text-3xl font-bold text-center mb-4">Teams Followed</h1>
            <table class="w-full bg-white border border-gray-200 rounded">
                <thead>
                <tr class="bg-gray-200">
                    <th class="py-2 px-4 text-left">Team Name</th>
                    <th class="py-2 px-4 text-left">Emblem</th>
                    <th class="py-2 px-4 text-left">Details</th>
                    <th class="py-2 px-4 text-left">Unfollow</th>
                </tr>
                </thead>
                <tbody>
                {% for team in followed_teams %}
                    <tr class="border-b">
                        <td class="py-2 px-4">{{ team.name }}</td>
                        <td class="py-2 px-4">
                            <div class="w-6 h-6">
                                <img src="{{ team.crest }}" alt="{{ team.name }}" class="w-full h-full object-contain"
                                     style="width: 30%; height: 30%;">
                            </div>
                        </td>
                        <td class="py-2 px-4">
                            <a href="{{ path('app_team_detail', {'id': team.id}) }}"
                               class="text-blue-500 hover:underline">
                                View Details
                            </a>
                        </td>
                        <td class="py-2 px-4">
                            <a href="{{ path('app_unfollow', {'id': team.id}) }}" class="text-red-500 hover:underline">
                                Unfollow
                            </a>
                        </td>


                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="py-2 px-4 border-b text-center">YOU DON'T FOLLOW ANY TEAM</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}