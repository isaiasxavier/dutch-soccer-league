{% extends 'base.html.twig' %}

{% block title %}Times Seguidos{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Times que você segue</h1>
        <ul class="list-disc pl-5">
            {% for team in followed_teams %}
                <li class="mb-2">
                    <a href="{{ path('app_team_detail', {'id': team.id}) }}" class="text-blue-500 hover:underline">
                        {{ team.name }}
                    </a>
                </li>
            {% else %}
                <li>Você não está seguindo nenhum time.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
