{% extends 'base.html.twig' %}

{% block title %}Admin Panel{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-center my-4">Admin Panel</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white p-4 rounded shadow">
            <h2 class="text-2xl font-bold mb-4">Teams</h2>
            <table class="w-full bg-white">
                <thead>
                <tr>
                    <th class="py-2 px-4 bg-gray-200 text-left">Team Name</th>
                </tr>
                </thead>
                <tbody>
                {% for team in teams %}
                    <tr class="border-b">
                        <td class="py-2 px-4">
                            <a href="{{ path('app_team_detail', {id: team.id}) }}"
                               class="text-blue-500 hover:text-blue-700">
                                {{ team.name }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="mt-4 flex justify-center space-x-4">
                {% if offset > 0 %}
                    <a href="{{ path('app_homepage', {limit: limit, offset: offset - limit}) }}"
                       class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded">
                        Previous
                    </a>
                {% endif %}
                <a href="{{ path('app_homepage', {limit: limit, offset: offset + limit}) }}"
                   class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded">
                    Next
                </a>
            </div>
        </div>
        <div class="bg-white p-4 rounded shadow">
            <h2 class="text-2xl font-bold mb-4">Teams Followed</h2>
            <table class="w-full bg-white">
                <thead>
                <tr>
                    <th class="py-2 px-4 bg-gray-200 text-left">Team Name</th>
                </tr>
                </thead>
                <tbody>
                {# {% for team in teamsFollowed %}
                    <tr class="border-b">
                        <td class="py-2 px-4">
                            <a href="{{ path('app_team_detail', {id: team.id}) }}"
                               class="text-blue-500 hover:text-blue-700">
                                {{ team.name }}
                            </a>
                        </td>
                    </tr>
                {% endfor %} #}
                </tbody>
            </table>
        </div>
        <div class="bg-white p-4 rounded shadow">
            <h2 class="text-2xl font-bold mb-4">Recent Matches</h2>
            <table class="w-full bg-white">
                <thead>
                <tr>
                    <th class="py-2 px-4 bg-gray-200 text-left">Match Name</th>
                </tr>
                </thead>
                <tbody>
                {# {% for game in recentGames %}
                    <tr class="border-b">
                        <td class="py-2 px-4">
                            <a href="{{ path('app_game_detail', {id: game.id}) }}"
                               class="text-blue-500 hover:text-blue-700">
                                {{ game.name }}
                            </a>
                        </td>
                    </tr>
                {% endfor %} #}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}