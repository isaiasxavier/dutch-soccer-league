{% block body %}
    <h1 class="text-3xl font-bold text-center my-4">Teams</h1>
    <div class="overflow-x-auto flex justify-center">
        <table class="w-auto bg-white">
            <thead>
            <tr>
                <th class="py-2 px-4 bg-gray-200 text-left">Team Name</th>
                <th class="py-2 px-4 bg-gray-200 text-left">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for team in teams %}
                <tr class="border-b">
                    <td class="py-2 px-4">{{ team.name }}</td>
                    <td class="py-2 px-4">
                        <a href="{{ path('app_team_detail', {id: team.id}) }}"
                           class="text-blue-500 hover:text-blue-700">
                            View Details
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="mt-4 flex justify-center space-x-4">
        {% if offset > 0 %}
            <a href="{{ path('app_teams', {limit: limit, offset: offset - limit}) }}"
               class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded">
                Previous
            </a>
        {% endif %}
        <a href="{{ path('app_teams', {limit: limit, offset: offset + limit}) }}"
           class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded">
            Next
        </a>
    </div>
{% endblock %}